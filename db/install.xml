<?xml version="1.0" encoding="UTF-8" ?>
<XMLDB PATH="local/staticpage/db" VERSION="20250106" COMMENT="XMLDB file for local_staticpage">
  <TABLES>
    <TABLE NAME="local_staticpage_pages" COMMENT="Static pages stored in database">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="slug" TYPE="char" LENGTH="100" NOTNULL="true" COMMENT="URL-friendly identifier (e.g., como-funciona)"/>
        <FIELD NAME="title" TYPE="char" LENGTH="255" NOTNULL="true" COMMENT="Page title"/>
        <FIELD NAME="content" TYPE="text" NOTNULL="false" COMMENT="Page HTML content"/>
        <FIELD NAME="contentformat" TYPE="int" LENGTH="4" NOTNULL="true" DEFAULT="1" COMMENT="Moodle text format"/>
        <FIELD NAME="metadescription" TYPE="char" LENGTH="255" NOTNULL="false" COMMENT="SEO meta description"/>
        <FIELD NAME="status" TYPE="int" LENGTH="1" NOTNULL="true" DEFAULT="1" COMMENT="0=draft, 1=published"/>
        <FIELD NAME="showintoc" TYPE="int" LENGTH="1" NOTNULL="true" DEFAULT="1" COMMENT="Show in table of contents/menu"/>
        <FIELD NAME="sortorder" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" COMMENT="Display order"/>
        <FIELD NAME="timecreated" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0"/>
        <FIELD NAME="timemodified" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0"/>
        <FIELD NAME="usermodified" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
        <KEY NAME="usermodified" TYPE="foreign" FIELDS="usermodified" REFTABLE="user" REFFIELDS="id"/>
      </KEYS>
      <INDEXES>
        <INDEX NAME="slug" UNIQUE="true" FIELDS="slug" COMMENT="Unique slug for URLs"/>
        <INDEX NAME="status_sortorder" UNIQUE="false" FIELDS="status, sortorder"/>
      </INDEXES>
    </TABLE>
  </TABLES>
</XMLDB>
